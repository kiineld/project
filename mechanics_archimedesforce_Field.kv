<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True


<MechanicsArchimedesForceScreen>:
    MDScreen:
        MDNavigationLayout:
            MDScreenManager:
                MDScreen:
                    MDTopAppBar:
                        id: top_bar
                        title: "Механика"
                        orientation: "vertical"
                        pos_hint: {"center_x": 0.5, "center_y": 0.97}
                        left_action_items: [["arrow-left-bold-circle-outline", lambda x: root.go_back()]]
                        right_action_items: [["account", lambda x: root.open_account()], ["menu", lambda x: root.ids.nav_drawer.set_state("toggle")]]
                        elevation: 1
                        md_bg_color: 168/255, 228/255, 160/255, 1
                    RoundedButton:
                        text: "Посчитать"
                        font_size: 18
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.1, "center_y": 0.04}
                        on_press: root.count_density()
                    RoundedButton:
                        text: "Вода до"
                        font_size: 20
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.1, "center_y": 0.04}
                        on_press: root.show_water_level_before()
                    RoundedButton:
                        text: "Вода после"
                        font_size: 16
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.2, "center_y": 0.04}
                        on_press: root.show_water_level_after()
                    RoundedButton:
                        text: "Посчитать"
                        font_size: 18
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.5, "center_y": 0.04}
                        on_press: root.count_density()
                    RoundedButton:
                        text: "?"
                        font_size: 20
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.9, "center_y": 0.04}
                        on_press: root.archimedes_force_explanation()
                    RoundedButton:
                        text: "Задача"
                        font_size: 20
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.1, "center_y": 0.84}
                        on_press: root.archimedes_force_task()

            MDNavigationDrawer:
                id: nav_drawer
                type: "standard"
                radius: (dp(16), 0, 0, dp(16))
                anchor: "right"
                MDNavigationDrawerMenu:
                    MDNavigationDrawerHeader:
                        title: "Элементы комплекта"
                        title_color: "#4a4939"
                        text: "Выберите элемент комплекта"
                        spacing: "4dp"
                        padding: "12dp", 0, 0, "56dp"
                    MDTextField:
                        id: volume_before
                        hint_text: "Объем до погружения[мл]"
                        on_text: root.get_volume_before()
                    MDTextField:
                        id: volume_after
                        hint_text: "Объем после погружения[мл]"
                        on_text:
                            root.get_volume_after()
                    MDTextField:
                        id: weight
                        hint_text: "Масса тела[г]"
                        on_text: root.get_weight()