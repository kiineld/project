<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True


<ElectricityScreen>:
    MDScreen:
        MDNavigationLayout:
            MDScreenManager:
                MDScreen:
                    MDTopAppBar:
                        id: top_bar
                        title: "Электричество"
                        orientation: "vertical"
                        pos_hint: {"center_x": 0.5, "center_y": 0.97}
                        left_action_items: [["arrow-left-bold-circle-outline", lambda x: root.go_back()]]
                        right_action_items: [["account", lambda x: root.open_account()], ["menu", lambda x: root.ids.nav_drawer.set_state("toggle")]]
                        elevation: 1
                        md_bg_color: 168/255, 228/255, 160/255, 1
                    RoundedButton:
                        text: "Проверить"
                        font_size: 20
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.5, "center_y": 0.04}
                        on_press: root.check_scheme()
                    RoundedButton:
                        text: "Очистить"
                        font_size: 20
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.1, "center_y": 0.04}
                        on_press: root.clear_scheme()

            MDNavigationDrawer:
                id: nav_drawer
                type: "standard"
                radius: (dp(16), 0, 0, dp(16))
                anchor: "right"
                MDNavigationDrawerMenu:
                    MDNavigationDrawerHeader:
                        title: "Элементы комплекта"
                        title_color: "#4a4939"
                        text: "Выберите элемент комплекта"
                        spacing: "4dp"
                        padding: "12dp", 0, 0, "56dp"

                    DrawerClickableItem:
                        icon: "images/horizontal_wire.png"
                        text: "Провод"
                        on_press: root.make_element("images/horizontal_wire.png")
                    MDNavigationDrawerDivider:

                    DrawerClickableItem:
                        icon: "images/ammeter.png"
                        text: "Амперметр"
                        on_press: root.make_element("images/ammeter.png")
                    MDNavigationDrawerDivider:

                    DrawerClickableItem:
                        icon: "images/resistor.png"
                        text: "Резистор"
                        on_press: root.make_element("images/resistor.png")
                    MDNavigationDrawerDivider:

                    DrawerClickableItem:
                        icon: "images/source.png"
                        text: "Источник питания"
                        on_press: root.make_element("images/source.png")
                    MDNavigationDrawerDivider:

                    DrawerClickableItem:
                        icon: "images/voltmeter.png"
                        text: "Вольтметр"
                        on_press: root.make_element("images/voltmeter.png")