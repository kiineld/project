<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True


<MechanicsBlocksScreen>:
    MDScreen:
        MDNavigationLayout:
            MDScreenManager:
                MDScreen:
                    MDTopAppBar:
                        id: top_bar
                        title: "Механика"
                        orientation: "vertical"
                        pos_hint: {"center_x": 0.5, "center_y": 0.97}
                        left_action_items: [["arrow-left-bold-circle-outline", lambda x: root.go_back()]]
                        right_action_items: [["account", lambda x: root.open_account()], ["menu", lambda x: root.ids.nav_drawer.set_state("toggle")]]
                        elevation: 1
                        md_bg_color: 168/255, 228/255, 160/255, 1
                    RoundedButton:
                        text: "Грузы"
                        font_size: 20
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.1, "center_y": 0.04}
                        on_press: root.draw_cargo()
                    RoundedButton:
                        text: "Посчитать"
                        font_size: 18
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.5, "center_y": 0.04}
                        on_press: root.count_elastic_force_work()
                    RoundedButton:
                        text: "?"
                        font_size: 20
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.9, "center_y": 0.04}
                        on_press: root.blocks_explanation()
                    RoundedButton:
                        text: "Задача"
                        font_size: 20
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.1, "center_y": 0.84}
                        on_press: root.blocks_task()

            MDNavigationDrawer:
                id: nav_drawer
                type: "standard"
                radius: (dp(16), 0, 0, dp(16))
                anchor: "right"
                MDNavigationDrawerMenu:
                    MDNavigationDrawerHeader:
                        title: "Элементы комплекта"
                        title_color: "#4a4939"
                        text: "Выберите элемент комплекта"
                        spacing: "4dp"
                        padding: "12dp", 0, 0, "56dp"

                    DrawerClickableItem:
                        icon: "mechanics_images/forces.png"
                        text: "Показать силы"
                        on_press: root.show_force()
                    MDNavigationDrawerDivider:
                    DrawerClickableItem:
                        icon: "mechanics_images/dynamometer2.png"
                        text: "Динамометр"
                        on_press: root.draw_dynamometer()
                    MDNavigationDrawerDivider:

                    MDTextField:
                        id: cargo_number
                        hint_text: "Количество грузов"
                        on_text: root.get_cargo_number()
                    MDTextField:
                        id: cargo_weight
                        hint_text: "Масса 1 груза[г]"
                        on_text: root.get_cargo_weight()
                    MDTextField:
                        id: reach_height
                        hint_text: "Высота подъема[см]"
                        on_text: root.get_reach_height()