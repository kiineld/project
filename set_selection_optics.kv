<SetScreenOptics>:
    BoxLayout:
        orientation: "horizontal"
        size_hint: 0.8, 0.8
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        spacing: 115

        RoundedButton:
            text: "Механика"
            font_size: 20
            size_hint: 0.3, 0.9
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press:
                app.root.current = "mechanics"
                app.root.transition.direction = "left"

        RoundedButton:
            text: "Электричество"
            font_size: 20
            size_hint: 0.3, 0.9
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press:
                app.root.current = "electricity"
                app.root.transition.direction = "left"

        RoundedButton:
            text: "Оптика"
            font_size: 20
            size_hint: 0.3, 0.9
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press:
                app.root.current = "optics"
                app.root.transition.direction = "left"