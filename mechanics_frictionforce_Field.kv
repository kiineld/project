<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True


<MechanicsFrictionForceScreen>:
    #friction_force_work_visible: False
    #friction_coefficient_visible: False
    MDScreen:
        MDNavigationLayout:
            MDScreenManager:
                MDScreen:
                    MDTopAppBar:
                        id: top_bar
                        title: "Механика"
                        orientation: "vertical"
                        pos_hint: {"center_x": 0.5, "center_y": 0.97}
                        left_action_items: [["arrow-left-bold-circle-outline", lambda x: root.go_back()]]
                        right_action_items: [["account", lambda x: root.open_account()], ["menu", lambda x: root.ids.nav_drawer.set_state("toggle")]]
                        elevation: 1
                        md_bg_color: 168/255, 228/255, 160/255, 1
                    RoundedButton:
                        text: "Посчитать 1"
                        font_size: 16
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.45, "center_y": 0.04}
                        on_press: root.count_friction_force_work()
                    RoundedButton:
                        text: "Посчитать 2"
                        font_size: 16
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.55, "center_y": 0.04}
                        on_press: root.count_friction_coefficient()
                    RoundedButton:
                        text: "?"
                        font_size: 20
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.9, "center_y": 0.04}
                        on_press: root.friction_force_explanation()
                    RoundedButton:
                        text: "Задача 1"
                        font_size: 20
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.1, "center_y": 0.84}
                        on_press: root.friction_force_task1()
                    RoundedButton:
                        text: "Задача 2"
                        font_size: 20
                        size_hint: 0.05, 0.05
                        pos_hint: {"center_x": 0.1, "center_y": 0.74}
                        on_press: root.friction_force_task2()

            MDNavigationDrawer:
                id: nav_drawer
                type: "standard"
                radius: (dp(16), 0, 0, dp(16))
                anchor: "right"
                MDNavigationDrawerMenu:
                    MDNavigationDrawerHeader:
                        title: "Элементы комплекта"
                        title_color: "#4a4939"
                        text: "Выберите элемент комплекта"
                        spacing: "4dp"
                        padding: "12dp", 0, 0, "56dp"

                    DrawerClickableItem:
                        icon: "mechanics_images/object.png"
                        text: "Тело"
                        on_press: root.draw_object()
                    MDNavigationDrawerDivider:

                    DrawerClickableItem:
                        icon: "mechanics_images/dynamometer.png"
                        text: "Динамометр"
                        on_press: root.draw_dynamometer()
                    MDNavigationDrawerDivider:

                    DrawerClickableItem:
                        icon: "mechanics_images/forces.png"
                        text: "Показать силы"
                        on_press: root.show_forces()
                    MDNavigationDrawerDivider:

                    MDTextField:
                        id: friction_force
                        hint_text: "Сила трения[Н]"
                        on_text: root.get_friction_force()
                    MDTextField:
                        id: distance
                        hint_text: "Пройденное расстояние[см]"
                        on_text: root.get_distance()
                    MDNavigationDrawerDivider:
                    MDTextField:
                        id: traction_force
                        hint_text: "Сила тяги[Н]"
                        on_text: root.get_traction_force()
                    MDTextField:
                        id: weight
                        hint_text: "Масса тела с грузиками[г]"
                        on_text: root.get_weight()
